{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "host": {
      "title": "Host",
      "type": "string",
      "minLength": 1
    },
    "port": {
      "title": "Port",
      "type": "integer",
      "default": 8123
    },
    "database": {
      "title": "Database",
      "type": "string",
      "minLength": 1
    },
    "user": {
      "title": "User",
      "type": "string",
      "minLength": 1
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 1
    },
    "useHTTPS": {
      "title": "Use https",
      "type": "boolean"
    },
    "readonly": {
      "title": "Use only HTTP GET",
      "type": "boolean"
    },
    "queryOptions": {}
  },
  "required": ["host", "port", "database"]
}
